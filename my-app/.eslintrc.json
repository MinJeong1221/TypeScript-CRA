{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/strict"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 14,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "ignorePatterns":["*.css"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension":["warn",{"extensions":[".tsx"]} ],
        "import/extensions":[
            "error",
            "ignorePackages",
            {
              "ts":"never",
              "tsx":"never"
            }
        ],
  "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error"
    },
    "settings":{
        "node": {
            "paths":["src"]
        },
        "import/resolver":{
          "typescript":{}
        }
    }
}
